<h2>Customers list</h2>
<ul>
    {{#each customersList}} {{! reference to customerList from 'customer-router' file }}
        <form action="/customers/products/{{this.id}}?_method=PATCH" method="POST">
            <li>
                <label>
                    {{this.fullName}}
                    <select name="">
                        <option value="">Choose product</option>
                        {{#each ../productsList}} {{! "../" allows to go out from the context of first each and define productsList }}
                            <option value="{{this.id}}">{{this.productName}}</option>
                        {{/each}}
                    </select>
                </label>
                <button>Save</button>
            </li>
        </form>
    {{/each}}
</ul>
<h2>Customers with already active products</h2>
<ul>
    {{#each existedCustomersList}}
        <li>
            <label>
                {{this.customerId}}:
            </label>
            <label>
                {{this.productName}}
            </label>
        </li>

    {{/each}}
</ul>
<h2>Add new customer</h2>
<form action="/customers" method="POST">
    <label>
        Full Name:
        <input name="fullName" type="text">
    </label>
    <button>Save</button>
</form>